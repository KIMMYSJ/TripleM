<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"

    tools:context=".LoginActivity"

    >

<RelativeLayout
    android:layout_marginTop="100dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/imageLogoBack"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/logo_long_back" />

    <TextView
        android:textSize="36dp"
        android:text="Triple M"
        android:textAlignment="center"
        android:textColor="@color/colorMint"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageLogo"
        android:layout_width="240dp"
        android:layout_height="68dp"
        app:srcCompat="@color/colorRealWhite" />
</RelativeLayout>


    <GridLayout
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText

            android:id="@+id/editId"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@null"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:paddingRight="40dp"
            android:textSize="16sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="260dp"
            android:layout_height="1dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="#303030" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@null"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:paddingRight="40dp"
            android:textSize="16sp" />

        <ImageButton

            android:id="@+id/btn_login"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="#595959"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/login_arrow" />

    </GridLayout>
<com.google.android.gms.common.SignInButton

    android:id="@+id/btn_google"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:orientation="horizontal">
<CheckBox

        android:id="@+id/cb_loginInfo"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Save Login info"
        android:textColor="#595959"
 />

    <Button
        android:id="@+id/btn_signUp"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:padding="6dp"
        android:background="@drawable/login_box2"
        android:text="Sign up"
        android:textColor="@color/colorTomato"
  />
</LinearLayout>





</LinearLayout>